{
  "name": "t3-skeleton",
  "version": "1.0.0",
  "description": "Full-stack T3 boilerplate with PostgreSQL, Express, React (Vite), and TypeScript",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w apps/api\" \"npm run dev -w apps/web\"",
    "build": "npm run build -w apps/api && npm run build -w apps/web",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\" --ignore-path .gitignore",
    "test:api": "npm run test --workspace=apps/api",
    "test:web": "npm run test --workspace=apps/web",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:studio": "npm --workspace=apps/api run db:studio",
    "db:migrate": "npm --workspace=apps/api run db:migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thapelomagqazana/t3-skeleton.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/thapelomagqazana/t3-skeleton/issues"
  },
  "homepage": "https://github.com/thapelomagqazana/t3-skeleton#readme",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsdoc": "^51.3.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "react-router-dom": "^6.30.1"
  },
  "prisma": {
    "schema": "packages/infrastructure/src/prisma/schema.prisma"
  }
}
